include README.rst
include CHANGES.rst
include setup.cfg
include LICENSE.rst
include pyproject.toml

recursive-include pyflct *.pyx *.c *.pxd
recursive-include docs *
recursive-include cextern *

prune build
prune docs/_build
prune docs/api

global-exclude *.pyc *.o _compiler.c _flct* flct.c compiler_version*

# This subpackage is only used in development checkouts and should not be
# included in built tarballs
prune pyflct/_dev
